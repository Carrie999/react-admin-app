
{
  "extends":"eslint:recommended",
  "env":{
      "browser":true,
      "node":true,
      "es6":true
  },
  "parser":"babel-eslint",
  "rules":{
      "no-cond-assign": 2,
      "no-constant-condition": 2,
      "comma-dangle": [1, "never"],
      "no-dupe-args": 2,
      "no-dupe-keys": 2,
      "no-empty": 0,
      "no-extra-semi": 2,
      "no-unreachable": 2,
      "use-isnan": 2,
      "consistent-return": 0,
      "curly": [2, "all"],
      "eqeqeq": [2, "allow-null"],
      "no-alert": 0,
      "no-loop-func": 1,
      "no-multi-spaces": 2,
      "no-console": 0, 
      "strict":0,
      "valid-jsdoc":1,
      "react/jsx-uses-react":1,
      "react/jsx-uses-vars":1,
      "react/react-in-jsx-scope":1,
      "array-bracket-spacing": [2, "never"],
      "brace-style": [2, "1tbs", {
        "allowSingleLine": true
     }],
     "camelcase": 2,
     "comma-spacing": [2, {
      "before": false,
      "after": true
    }]
  },
  "plugins":[
    "react"
  ]
}